# Required: Bot token from @BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Optional: Botspot component flags (all disabled by default)
BOTSPOT_PRINT_BOT_URL_ENABLED=True
BOTSPOT_ERROR_HANDLER_ENABLED=True
BOTSPOT_BOT_COMMANDS_MENU_ENABLED=True
BOTSPOT_ASK_USER_ENABLED=False
BOTSPOT_TRIAL_MODE_ENABLED=False

# Optional: Error handler settings
BOTSPOT_ERROR_HANDLER_DEVELOPER_CHAT_ID=your_chat_id_here
BOTSPOT_ERROR_HANDLER_EASTER_EGGS=False

# Optional: Trial mode settings (if enabled)
# BOTSPOT_TRIAL_MODE_ALLOWED_USERS=["username1", "username2"]
# BOTSPOT_TRIAL_MODE_LIMIT_PER_USER=10
# BOTSPOT_TRIAL_MODE_GLOBAL_LIMIT=100 

# Optional: Scheduler and Database settings
BOTSPOT_SCHEDULER_ENABLED=True
BOTSPOT_MONGO_DATABASE_ENABLED=True
BOTSPOT_MONGO_DATABASE_CONN_STR="mongodb://localhost:27017"
BOTSPOT_MONGO_DATABASE_DATABASE="cat_feeding_bot"